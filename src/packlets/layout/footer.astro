---
import ExternalLink from '$common/externalLink.astro'

import GitHub from '$icon/github.astro'
---

<footer class="bg-white">
  <div
    class="mx-auto max-w-7xl px-6 py-12 md:flex md:items-center md:justify-between lg:px-8"
  >
    <div class="flex justify-center space-x-6 md:order-2">
      <ExternalLink
        href="https://github.com/rayriffy/bkk"
        class="text-gray-400 hover:text-gray-500"
      >
        <span class="sr-only">GitHub</span>
        <GitHub class="h-6 w-6" aria-hidden="true" />
      </ExternalLink>
    </div>
    <div class="mt-8 md:order-1 md:mt-0">
      <p class="text-center text-xs leading-5 text-gray-500">
        &copy; {new Date().getFullYear()}{' '}
        <ExternalLink href="https://creatorsgarten.org" class="underline">
          Creatorsgarten</ExternalLink>
        <span> & </span>
        <ExternalLink
          href="https://www.facebook.com/web.developer.th"
          class="underline"
        >
          Web Developer Thailand
        </ExternalLink>
      </p>
    </div>
  </div>
</footer>
